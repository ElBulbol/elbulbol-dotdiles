# Foot Terminal Configuration
# Clean, modern dark theme with good readability

[main]
# Font configuration
font=JetBrainsMono Nerd Font:size=12
dpi-aware=yes

# Terminal shell
shell=/bin/bash

# Performance
pad=8x8
resize-delay-ms=100

[bell]
urgent=no
notify=no
visual=no

[scrollback]
lines=10000

[url]
launch=xdg-open ${url}
label-letters=sadfjklewcmpgh
osc8-underline=url-mode
protocols=http, https, ftp, ftps, file, gemini, gopher

[cursor]
style=beam
blink=yes

[mouse]
hide-when-typing=yes

[colors]
# Dark theme with good contrast
alpha=0.95
background=1a1b26
foreground=c0caf5

## Normal/regular colors (color palette 0-7)
regular0=15161e  # black
regular1=f7768e  # red
regular2=9ece6a  # green
regular3=e0af68  # yellow
regular4=7aa2f7  # blue
regular5=bb9af7  # magenta
regular6=7dcfff  # cyan
regular7=a9b1d6  # white

## Bright colors (color palette 8-15)
bright0=414868   # bright black
bright1=f7768e   # bright red
bright2=9ece6a   # bright green
bright3=e0af68   # bright yellow
bright4=7aa2f7   # bright blue
bright5=bb9af7   # bright magenta
bright6=7dcfff   # bright cyan
bright7=c0caf5   # bright white

## Selection colors
selection-foreground=c0caf5
selection-background=33467c

[key-bindings]
# Copy/Paste
clipboard-copy=Control+Shift+c XF86Copy
clipboard-paste=Control+Shift+v XF86Paste

# Font size
increase-font-size=Control+plus Control+equal Control+KP_Add
decrease-font-size=Control+minus Control+KP_Subtract
reset-font-size=Control+0 Control+KP_0

# Scrollback
scrollback-up-page=Shift+Page_Up
scrollback-down-page=Shift+Page_Down
scrollback-up-line=Control+Shift+Up
scrollback-down-line=Control+Shift+Down

# URL mode
show-urls-launch=Control+Shift+u
show-urls-copy=Control+Shift+o
